<div class="row">
    <div class="col-12">
        <div class="card-box">
            <h4 class="m-t-0 header-title">Your Profile</h4>

            <div class="row">
                <div class="col-12">
                    <div class="p-2">
                        <form class="form-horizontal" role="form" id="userprofile" name="userprofile">

                            <div class="form-group row">
                                <label class="col-sm-2  col-form-label" for="simpleinput">ID</label>
                                <div class="col-sm-10">
                                    <input type="text" id="iduser" class="form-control" value="{{id}}" disabled>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2  col-form-label" for="simpleinput">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" id="username" class="form-control" value="{{username}}">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2  col-form-label" for="simpleinput">Email</label>
                                <div class="col-sm-10">
                                    <input type="text" id="email" class="form-control" value="{{email}}" disabled>
                                </div>
                            </div>

                            <button type="submit" id="edit" 
                                class="btn btn-success waves-effect width-md waves-light">Edit</button>

                        </form>
                    </div>
                </div>

            </div>
            <!-- end row -->

        </div> <!-- end card-box -->
    </div><!-- end col -->

   