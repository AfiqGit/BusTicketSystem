<div class="row">
    <div class="col-12">
        <div class="card-box">
            <h4 class="mt-0 header-title">My Records</h4><br>
            <div class="responsive-table-plugin">
                <div class="table-rep-plugin">
                    <div class="table-responsive">
                        <table class="table table-bordered dt-responsive nowrap" id="tblbooking">
                            <thead>
                                <tr>
                                    <th rowspan="2">ID</th>
                                    <th rowspan="2">Ticket ID</th>
                                    <th colspan="2">Bus Destination</th>
                                    <th rowspan="2">Date</th>
                                    <th rowspan="2">Quantity</th>
                                    <th rowspan="2">Price (RM)</th>
                                    <th rowspan="2">Status</th>
                                </tr>
                                <tr>
                                    <th>From</th>
                                    <th>To</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each bookings}}
                                <tr>
                                    <td>{{id}}</td>
                                    <td>{{ticketid}}</td>
                                    <td>{{destfrom}}</td>
                                    <td>{{destto}}</td>
                                    <td>{{date}}</td>
                                    <td>{{quantity}} / {{max}}</td>
                                    <td>{{price}}</td>
                                    <td>
                                        <a class="updatestatus">{{{displaystatus status}}}</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>